<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.schedule.dao.TScheduleJobDao">

    <resultMap id="BaseResultMap" type="com.app.schedule.entity.TScheduleJob">
        <!--@Table t_schedule_job-->
        <result property="jobId" column="job_id" jdbcType="INTEGER"/>
        <result property="appName" column="app_name" jdbcType="VARCHAR"/>
        <result property="appIcon" column="app_icon" jdbcType="VARCHAR"/>
        <result property="appPath" column="app_path" jdbcType="VARCHAR"/>
        <result property="scheduleTime" column="schedule_time" jdbcType="TIMESTAMP"/>
        <result property="isScheduled" column="is_scheduled" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          job_id, app_name, app_icon, app_path, schedule_time, is_scheduled
        from test.t_schedule_job
        where job_id = #{jobId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          job_id, app_name, app_icon, app_path, schedule_time, is_scheduled
        from test.t_schedule_job
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          job_id, app_name, app_icon, app_path, schedule_time, is_scheduled
        from test.t_schedule_job
        <where>
            <if test="jobId != null">
                and job_id = #{jobId}
            </if>
            <if test="appName != null and appName != ''">
                and app_name = #{appName}
            </if>
            <if test="appIcon != null and appIcon != ''">
                and app_icon = #{appIcon}
            </if>
            <if test="appPath != null and appPath != ''">
                and app_path = #{appPath}
            </if>
            <if test="scheduleTime != null">
                and schedule_time = #{scheduleTime}
            </if>
            <if test="isScheduled != null and isScheduled != ''">
                and is_scheduled = #{isScheduled}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="jobId" useGeneratedKeys="true">
        insert into test.t_schedule_job(app_name, app_icon, app_path, schedule_time, is_scheduled)
        values (#{appName}, #{appIcon}, #{appPath}, #{scheduleTime}, #{isScheduled})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.t_schedule_job
        <set>
            <if test="appName != null and appName != ''">
                app_name = #{appName},
            </if>
            <if test="appIcon != null and appIcon != ''">
                app_icon = #{appIcon},
            </if>
            <if test="appPath != null and appPath != ''">
                app_path = #{appPath},
            </if>
            <if test="scheduleTime != null">
                schedule_time = #{scheduleTime},
            </if>
            <if test="isScheduled != null and isScheduled != ''">
                is_scheduled = #{isScheduled},
            </if>
        </set>
        where job_id = #{jobId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.t_schedule_job where job_id = #{jobId}
    </delete>

</mapper>